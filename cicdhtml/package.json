{
  "name": "cicdhtml",
  "version": "0.0.1",
  "devDependencies": {
    "@sap/ui5-builder-webide-extension": "1.0.x",
    "@sapui5/ts-types": "1.71.x",
    "@ui5/cli": "2.2.6",
    "bestzip": "2.1.4",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.2",
    "karma-qunit": "^4.1.2",
    "karma-ui5": "^2.2.0",
    "qunit": "^2.15.0",
    "rimraf": "3.0.2"
  },
  "scripts": {
    "build": "npm run clean && ui5 build --include-task=generateManifestBundle generateCachebusterInfo && npm run zip",
    "zip": "cd dist && npx bestzip ../cicdhtml-content.zip *",
    "clean": "npx rimraf cicdhtml-content.zip dist",
    "test": "karma start karma-ci.conf.js && karma start karma.conf.js"
  },
  "ui5": {
    "dependencies": [
      "@sap/ui5-builder-webide-extension"
    ]
  }
}
